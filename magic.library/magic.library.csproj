<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>magic.library</PackageId>
    <Authors>Thomas Hansen</Authors>
    <Company>Thomas Hansen</Company>
    <Copyright>Thomas Hansen, thomas@gaiasoul.com</Copyright>
    <Description>Helper project for Magic to wire up everything easily by simply adding one package, and invoking two simple methods. When using Magic, this is (probably) the only package you should actually add, since this package pulls in everything else you'll need automatically.</Description>
    <PackageProjectUrl>https://github.com/polterguy/magic.library</PackageProjectUrl>
    <PackageLicenseUrl>https://raw.githubusercontent.com/polterguy/magic.library/master/LICENSE</PackageLicenseUrl>
    <PackageIconUrl>https://polterguy.github.io/favicon.ico</PackageIconUrl>
    <PackOnBuild>true</PackOnBuild>
    <PackageVersion>8.1.3</PackageVersion>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/polterguy/magic.library.git</RepositoryUrl>
    <PackageTags>wiring, magic, DSL, data, CRUD</PackageTags>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" />
  </ItemGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>bin/Release/netstandard2.0/magic.library.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="magic.lambda" Version="8.1.3" />
    <PackageReference Include="magic.lambda.config" Version="8.1.3" />
    <PackageReference Include="magic.lambda.crypto" Version="8.1.3" />
    <PackageReference Include="magic.lambda.http" Version="8.1.3" />
    <PackageReference Include="magic.lambda.hyperlambda" Version="8.1.3" />
    <PackageReference Include="magic.lambda.io" Version="8.1.3" />
    <PackageReference Include="magic.lambda.json" Version="8.1.3" />
    <PackageReference Include="magic.lambda.logging" Version="8.1.3" />
    <PackageReference Include="magic.lambda.mail" Version="8.1.3" />
    <PackageReference Include="magic.lambda.math" Version="8.1.3" />
    <PackageReference Include="magic.lambda.mysql" Version="8.1.3" />
    <PackageReference Include="magic.lambda.scheduler" Version="8.1.3" />
    <PackageReference Include="magic.lambda.slots" Version="8.1.3" />
    <PackageReference Include="magic.lambda.strings" Version="8.1.3" />
    <PackageReference Include="magic.lambda.dates" Version="8.1.3" />
    <PackageReference Include="magic.lambda.validators" Version="8.1.3" />
    <PackageReference Include="magic.io" Version="8.1.3" />
    <PackageReference Include="magic.lambda.mssql" Version="8.1.3" />
    <PackageReference Include="magic.signals" Version="8.1.3" />
    <PackageReference Include="magic.lambda.auth" Version="8.1.3" />
    <PackageReference Include="magic.endpoint" Version="8.1.3" />
    <PackageReference Include="magic.endpoint.services" Version="8.1.3" />
    <PackageReference Include="Microsoft.AspNetCore.Diagnostics" Version="2.2.0" />
  </ItemGroup>
</Project>
