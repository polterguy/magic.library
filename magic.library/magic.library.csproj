<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>magic.library</PackageId>
    <Authors>Thomas Hansen</Authors>
    <Company>Thomas Hansen</Company>
    <Copyright>Thomas Hansen, thomas@servergardens.com</Copyright>
    <Description>Helper project for Magic to wire up everything easily by simply adding one package, and invoking two simple methods. When using Magic, this is (probably) the only package you should actually add, since this package pulls in everything else you'll need automatically, and wires up everything sanely by default. To use package go to https://polterguy.github.io</Description>
    <PackageProjectUrl>https://github.com/polterguy/magic.library</PackageProjectUrl>
    <PackOnBuild>true</PackOnBuild>
    <PackageVersion>9.9.0</PackageVersion>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/polterguy/magic.library.git</RepositoryUrl>
    <PackageTags>wiring, magic, DSL, data, CRUD</PackageTags>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <PackageIcon>ico.png</PackageIcon>
  </PropertyGroup>

  <PropertyGroup>
    <PackageLicenseExpression>LGPL-3.0-only</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../ico.png" Pack="true" PackagePath="$(PackageIcon)" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" />
  </ItemGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>bin/Release/netstandard2.0/magic.library.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="magic.lambda" Version="9.9.0" />
    <PackageReference Include="magic.lambda.guid" Version="9.9.0" />
    <PackageReference Include="magic.lambda.config" Version="9.9.0" />
    <PackageReference Include="magic.lambda.image" Version="9.9.0" />
    <PackageReference Include="magic.lambda.crypto" Version="9.9.0" />
    <PackageReference Include="magic.lambda.http" Version="9.9.0" />
    <PackageReference Include="magic.lambda.hyperlambda" Version="9.9.0" />
    <PackageReference Include="magic.lambda.io" Version="9.9.0" />
    <PackageReference Include="magic.lambda.csv" Version="9.9.0" />
    <PackageReference Include="magic.lambda.json" Version="9.9.0" />
    <PackageReference Include="magic.lambda.html" Version="9.9.0" />
    <PackageReference Include="magic.lambda.logging" Version="9.9.0" />
    <PackageReference Include="magic.lambda.caching" Version="9.9.0" />
    <PackageReference Include="magic.lambda.mail" Version="9.9.0" />
    <PackageReference Include="magic.lambda.math" Version="9.9.0" />
    <PackageReference Include="magic.lambda.mysql" Version="9.9.0" />
    <PackageReference Include="magic.lambda.mssql" Version="9.9.0" />
    <PackageReference Include="magic.lambda.scheduler" Version="9.9.0" />
    <PackageReference Include="magic.lambda.slots" Version="9.9.0" />
    <PackageReference Include="magic.lambda.strings" Version="9.9.0" />
    <PackageReference Include="magic.lambda.dates" Version="9.9.0" />
    <PackageReference Include="magic.lambda.validators" Version="9.9.0" />
    <PackageReference Include="magic.signals" Version="9.9.0" />
    <PackageReference Include="magic.lambda.auth" Version="9.9.0" />
    <PackageReference Include="magic.endpoint" Version="9.9.0" />
    <PackageReference Include="magic.endpoint.services" Version="9.9.0" />
    <PackageReference Include="magic.lambda.sockets" Version="9.9.0" />
    <PackageReference Include="magic.lambda.system" Version="9.9.0" />
    <PackageReference Include="Microsoft.AspNetCore.Diagnostics" Version="2.2.0" />
  </ItemGroup>
</Project>
